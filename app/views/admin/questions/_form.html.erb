<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @question] do |f| %>
      <%= render "shared/errors", target: f.object %>
      <%= f.select :subject_id, options_from_collection_for_select(@subjects, "id", "title") %>

      <%= f.label :content, t("question_content") %>
      <%= f.text_field :content, class: "form-control" %>

      <%= f.select :status, options_for_select([[t("active"), 1], [t("waiting"), 2]])%>

      <div id="answers_list">
        <%= f.fields_for :answers do |builder| %>
          <%= render "answer_fields", f: builder %>
        <% end %>
      </div>

      <p><%= link_to_add_fields t("add_answer"), f, :answers %></p>

      <%= f.submit t("submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
